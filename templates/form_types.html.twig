{% block offer_date_widget %}

    <div class="my-4">
        <div class="flex justify-center">
            <offer-datepicker data-min-date="" data-max-date="">

                <p class="text-sm font-medium leading-5 text-gray-700 dark:text-gray-50">Datum</p>
                <div class="mt-1">
                    {{ form_widget(form.begin.date, {'attr': {'data-target': 'offer-datepicker.begin'}}) }}
                    {{ form_widget(form.end.date, {'attr': {'data-target': 'offer-datepicker.end'}}) }}
                </div>

            </offer-datepicker>
        </div>

        <div class="mt-4 flex justify-center">
            <div>
                <p class="text-sm font-medium leading-5 text-gray-700 dark:text-gray-50">Uhrzeit</p>

                <div class="mt-1 flex">

                    <div class="rounded-md shadow-sm border border-gray-200 flex">
                        {{ form_widget(form.begin.time.hour, {'attr': {'class': 'w-16 pl-2 pr-6 border-none rounded-r-none focus:z-10'}}) }}
                        <div class="flex items-center bg-gray-100 px-1">
                            <span class="block leading-none font-semibold text-gray-700">:</span>
                        </div>
                        {{ form_widget(form.begin.time.minute, {'attr': {'class': 'w-16 pl-2 pr-6 border-none rounded-l-none focus:z-10'}}) }}
                    </div>

                    <div class="flex items-center px-1">
                        <span class="block leading-none font-semibold text-gray-700">â€”</span>
                    </div>

                    <div class="rounded-md shadow-sm border border-gray-200 flex">
                        {{ form_widget(form.end.time.hour, {'attr': {'class': 'w-16 pl-2 pr-6 border-none rounded-r-none focus:z-10'}}) }}
                        <div class="flex items-center bg-gray-100 px-1">
                            <span class="block leading-none font-semibold text-gray-700">:</span>
                        </div>
                        {{ form_widget(form.end.time.minute, {'attr': {'class': 'w-16 pl-2 pr-6 border-none rounded-l-none focus:z-10'}}) }}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock offer_date_widget %}
